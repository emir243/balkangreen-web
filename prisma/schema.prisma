generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model agenda_items {
  id          BigInt   @id @default(autoincrement())
  time        String
  title       String
  category    String
  description String?
  location    String?  @default("Hotel Borovi Sjenica")
  created_at  DateTime @default(dbgenerated("timezone('utc'::text, now())")) @db.Timestamptz(6)
  
  // --- IZMJENA: Ovo je sada niz (Array) BigInt-ova ---
  // Ovde će se čuvati lista ID-eva, npr: {1, 2, 5}
  speaker_ids BigInt[] @default([]) 
}

model partners {
  id          BigInt   @id @default(autoincrement())
  name        String?
  image_url   String
  website_url String?
  category    String
  created_at  DateTime @default(dbgenerated("timezone('utc'::text, now())")) @db.Timestamptz(6)
}

/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model posts {
  id             BigInt    @id @default(autoincrement())
  created_at     DateTime  @default(dbgenerated("timezone('utc'::text, now())")) @db.Timestamptz(6)
  updated_at     DateTime? @default(dbgenerated("timezone('utc'::text, now())")) @db.Timestamptz(6)
  title          String
  content        String?
  type           String?   @default("news")
  slug           String?
  image_url      String?
  gallery_urls   String[]
  video_duration String?
  guest_name     String?
  youtube_link   String?
  
  // Uklonjena je linija "agenda_items agenda_items[]" jer više ne postoji foreign key relacija
}